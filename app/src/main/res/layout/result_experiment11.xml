<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/e11_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ur, В"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="R15, МΩ"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="R60, МΩ"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="K"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="t, °C"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Результат"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/e11_u_r"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/e11_r15"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/e11_r60"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/e11_k"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/e11_temp"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/e11_result"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
