<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.avem.kspad.view.Experiment8Activity">

    <TextView
        android:id="@+id/status"
        android:textSize="24sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_of_experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/experiment8"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <ToggleButton
        android:id="@+id/experiment_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textOff="Запустить испытание"
        android:textOn="Остановить испытание"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_of_experiment"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiment_switch">

        <TableRow>
            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Фаза"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="U, В"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="I, А"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="P, кВт"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="cos φ"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="V, об/мин"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="t, °C"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Время, с"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="A"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/u_a"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/i_a"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="B"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/u_b"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/i_b"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/p"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/cos"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/v"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/temp"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/t"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="C"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/u_c"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/i_c"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:text="Среднее"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/u_average"
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/i_average"
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_green"
                android:textSize="28sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>