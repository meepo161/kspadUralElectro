<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/e16_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Шум, дБ"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Вибрация с датчика 1, мм/с"
                android:layout_span="3"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Вибрация с датчика 2, мм/с"
                android:layout_span="3"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось X      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Y      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Z      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось X      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Y      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Z      "
                android:textSize="20sp"/>
        </TableRow>


        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Изм. хар."
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_noise"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_x1"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_y1"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_z1"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_x2"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_y2"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_z2"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

        </TableRow>



        <TableRow>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:text="Ном. хар."
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_i_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_u_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_s_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_p1_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_cos_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_m_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/e16_v_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
