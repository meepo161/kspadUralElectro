<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.avem.kspad.view.Experiment17Activity">

    <TextView
        android:id="@+id/status"
        android:textSize="24sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_of_experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/experiment17"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <ToggleButton
        android:id="@+id/experiment_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textOff="Запустить испытание"
        android:textOn="Остановить испытание"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_of_experiment"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiment_switch">

        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="R1"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="R2"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="R3"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="R0"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="t, °C"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:text="Результат"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:text="R, Ω"
                android:background="@drawable/border_padding_gray"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/r1"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/r2"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/r3"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/extrapolated_r"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/temp"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/result"
                android:background="@drawable/border_padding"
                android:textSize="28sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:text="Ном. хар."
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/average_r_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:textSize="28sp"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
