<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.avem.kspad.view.Experiment16Activity">

    <TextView
        android:id="@+id/status"
        android:textSize="24sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_of_experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/experiment16"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <ToggleButton
        android:id="@+id/experiment_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textOff="Запустить испытание"
        android:textOn="Остановить испытание"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_of_experiment"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiment_switch">

        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Шум, дБ"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Вибрация с датчика 1, мм/с"
                android:layout_span="3"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Вибрация с датчика 2, мм/с"
                android:layout_span="3"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось X      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Y      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Z      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось X      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Y      "
                android:textSize="20sp"/>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Ось Z      "
                android:textSize="20sp"/>
        </TableRow>


        <TableRow>

            <TextView
                android:background="@drawable/border_padding_gray"
                android:text="Изм. хар."
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/i_b"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/u_b"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/s"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/p1"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/cos"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/m"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/v"
                android:background="@drawable/border_padding"
                android:textSize="20sp"/>

        </TableRow>



        <TableRow>

            <TextView
                android:background="@drawable/border_padding_light_red"
                android:text="Ном. хар."
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/i_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/u_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/s_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/p1_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/cos_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/m_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/v_specified"
                android:background="@drawable/border_padding_light_red"
                android:textSize="20sp"/>

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
